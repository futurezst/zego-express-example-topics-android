<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="operation"
            type="com.zego.common.entity.OperationInfo" />

        <variable
            name="quality"
            type="com.zego.common.entity.StreamQuality" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:background="#ebeef5"
        android:orientation="vertical">

        <com.zego.common.widgets.TitleLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:name="@string/tx_publish_title">

            <Button
                android:id="@+id/goBackToPublishMainUI"
                android:onClick="goBackToInitSDKMainUI"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/ic_round_left" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="2dp"
                android:onClick="goSetting"
                android:text="@string/tx_common" />

        </com.zego.common.widgets.TitleLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextureView
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="onEndLive"
                android:text="@string/tx_end_live" />

            <RelativeLayout
                android:id="@+id/publisher_operation_state_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tx_init_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="@{operation.initResult}"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/tx_login_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tx_init_result"
                    android:text="@{operation.loginResult}"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tx_handleStream_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tx_login_result"
                    android:text="@{operation.handleStreamResult}"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tx_publish_resolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tx_handleStream_result"
                    android:text="@{quality.resolution}"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tx_publish_fps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tx_publish_resolution"
                    android:text="@{quality.fps}"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tx_publish_bitrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tx_publish_fps"
                    android:text="@{quality.bitrate}"
                    android:textColor="@color/black" />

                <Switch
                    android:id="@+id/sw_mic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:checked="true"
                    android:text="@string/tx_mic_state"
                    android:textColor="@color/white_color" />

                <Switch
                    android:id="@+id/sw_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/sw_mic"
                    android:checked="true"
                    android:text="@string/tx_camera"
                    android:textColor="@color/white_color" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</layout>
