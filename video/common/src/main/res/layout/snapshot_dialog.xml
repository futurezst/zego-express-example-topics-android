<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="200dp"
    android:layout_height="250dp"
    android:background="@drawable/snapshot_background">
<ImageView
    android:id="@+id/snapshot_img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></ImageView>
<ImageView
    android:background="@drawable/snapshot_close"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:id="@+id/img_close"
    android:layout_width="20dp"
    android:layout_height="20dp" ></ImageView>
</RelativeLayout>